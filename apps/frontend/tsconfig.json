{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest"],
    "paths": {
      "@/*": ["apps/frontend/src/*"],
      "@components/*": ["apps/frontend/src/components/*"],
      "@hooks/*": ["apps/frontend/src/hooks/*"],
      "@utils/*": ["apps/frontend/src/utils/*"],
      "@styles/*": ["apps/frontend/src/styles/*"],
      "@assets/*": ["apps/frontend/src/assets/*"],
      "@pages/*": ["apps/frontend/src/pages/*"],
      "@types/*": ["apps/frontend/src/types/*"],
      "@api/*": ["apps/frontend/src/api/*"]
    }
  },
  "files": [],
  "include": [
    "apps/frontend/src",
    "apps/frontend/src/types/svg.d.ts",
    "apps/frontend/src/styles/styled.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json"
}
